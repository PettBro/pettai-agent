# ==============================================================================
# Pett Agent Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file with real credentials to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Olas SDK Required Variables
# ------------------------------------------------------------------------------
# Ethereum and Gnosis RPC endpoints for blockchain interactions
BASE_LEDGER_RPC=https://base.llamarpc.com

# Safe contract addresses (JSON format)
CONTRACT_ADDRESS={"base": "0xYourSafeContractAddress"}

# Withdrawal mode for Olas SDK (true/false)
WITHDRAWAL_MODE=false

# ------------------------------------------------------------------------------
# AI and Bot Configuration
# ------------------------------------------------------------------------------
# OpenAI API key for AI functionality
OPENAI_API_KEY=sk-your-openai-api-key-here

# LangSmith API key for debugging and monitoring (optional)
LANGSMITH_API_KEY=your-langsmith-api-key

# Telegram bot token for user interaction
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# ------------------------------------------------------------------------------
# Pett.ai WebSocket Configuration
# ------------------------------------------------------------------------------
# Privy authentication token for WebSocket connections
PRIVY_TOKEN=your-privy-token-here

# WebSocket URL for Pett.ai backend
# Default: ws://localhost:3005 for development
# Production: ws://petbot-monorepo-websocket-333713154917.europe-west1.run.app
WEBSOCKET_URL=wss://ws.pett.ai

# ------------------------------------------------------------------------------
# Environment and Optional Configuration
# ------------------------------------------------------------------------------
# Node environment (development/production)
NODE_ENV=development

